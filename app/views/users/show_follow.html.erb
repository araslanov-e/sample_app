<table summary="Information about following/followers">
  <tr>
    <td class="main">
      <h1><%= @title %></h1>

      <% unless @users.empty? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate @users %>
      <% end %>
    </td>
    <td class="sidebar round">
      <%= render "user_sidebar" %>
      <% unless @users.empty? %>
        <div class="users">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, :size => 30), user %>
          <% end %>
        </div>
      <% end %>
    </td>
  </tr>
</table>